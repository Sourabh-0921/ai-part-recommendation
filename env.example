# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/parts_recommendation
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017/parts_recommendation_config

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Model Configuration
MODEL_PATH=models/latest
CONFIDENCE_THRESHOLD=80.0
MODEL_VERSION=1.0.0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=AI Parts Recommendation API
API_VERSION=1.0.0

# EMA Configuration
EMA_PERIODS=6
MIN_SERVICES_FOR_EMA=2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Security
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Performance
MAX_CONCURRENT_REQUESTS=500
CACHE_TTL_SECONDS=1800
BATCH_SIZE=100

# Monitoring
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Airflow
AIRFLOW_HOME=/opt/airflow
AIRFLOW_DB_URL=postgresql://username:password@localhost:5432/airflow

# Message Queue
RABBITMQ_URL=amqp://username:password@localhost:5672/
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# External APIs
OEM_API_URL=https://api.oem-parts.com/v1
WEATHER_API_URL=https://api.weather.com/v1
WEATHER_API_KEY=your-weather-api-key

# Environment
ENVIRONMENT=development
DEBUG=true
